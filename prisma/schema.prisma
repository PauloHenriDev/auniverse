// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id           String   @id @default(uuid())
  slug         String   @unique
  name         String
  alias        String
  age          Int
  birthday     String
  gender       String
  species      String
  status       String
  affiliation  String
  skinTone     String
  eyeColor     String
  quote        String
  quoteSource  String
}